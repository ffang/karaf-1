<featuresProcessing xmlns="http://karaf.apache.org/xmlns/features-processing/v1.0.0"
        xmlns:f="http://karaf.apache.org/xmlns/features/v1.6.0">

    <blacklistedRepositories>
        <repository>mvn:org.apache.karaf.features/framework/4.3.0-SNAPSHOT/xml/features</repository>
        <repository>mvn:org.apache.karaf.features/standard/4.3.0-SNAPSHOT/xml/features</repository>
        <repository>mvn:org.apache.karaf.features/enterprise/4.3.0-SNAPSHOT/xml/features</repository>
        <repository>mvn:org.apache.karaf.features/enterprise-legacy/4.3.0-SNAPSHOT/xml/features</repository>
        <repository>mvn:org.apache.karaf.features/spring/4.3.0-SNAPSHOT/xml/features</repository>
        <repository>mvn:org.apache.karaf.features/spring-legacy/4.3.0-SNAPSHOT/xml/features</repository>
    </blacklistedRepositories>

    <!-- A list of bundle URI replacements that allows changing external feature definitions -->
    <bundleReplacements>
        <bundle originalUri="mvn:javax.servlet/javax.servlet-api"
                replacement="mvn:javax.servlet/javax.servlet-api/${servlet.spec.version}" mode="maven" />
        <bundle originalUri="mvn:javax.mail/mail/[1.4,1.5)"
                replacement="mvn:com.sun.mail/javax.mail/${javax.mail.version}" mode="maven" />
        <bundle originalUri="mvn:io.undertow/undertow-core/[1.4,3)"
                replacement="mvn:io.undertow/undertow-core/${pax.web.undertow.version}" mode="maven" />
        <bundle originalUri="mvn:io.undertow/undertow-servlet/[1.4,3)"
                replacement="mvn:io.undertow/undertow-servlet/${pax.web.undertow.version}" mode="maven" />
        <bundle originalUri="mvn:io.undertow/undertow-websockets-jsr/[1.4,3)"
                replacement="mvn:io.undertow/undertow-websockets-jsr/${pax.web.undertow.version}" mode="maven" />
        <bundle originalUri="wrap:mvn:io.undertow/undertow-core/*"
                replacement="mvn:io.undertow/undertow-core/${pax.web.undertow.version}" mode="maven" />
        <bundle originalUri="wrap:mvn:io.undertow/undertow-servlet/*"
                replacement="mvn:io.undertow/undertow-servlet/${pax.web.undertow.version}" mode="maven" />
    </bundleReplacements>

    <!-- A list of feature replacements that allows changing external feature definitions -->
    <featureReplacements>
        <replacement>
            <feature name="hibernate-orm" version="${hibernate.version}" description="Combines all Hibernate core dependencies and required modules into a single feature">
                <f:feature prerequisite="true">wrap</f:feature>
                <f:feature>transaction-api</f:feature>
                <f:bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.antlr/${antlr.bundle.version}</f:bundle>
                <f:bundle>mvn:org.jboss.logging/jboss-logging/${jboss.logging.version}</f:bundle>
                <f:bundle>mvn:javax.persistence/javax.persistence-api/2.2</f:bundle>
                <f:bundle>mvn:org.javassist/javassist/3.24.1-GA</f:bundle>
                <f:bundle>mvn:net.bytebuddy/byte-buddy/1.9.5.redhat-00001</f:bundle>
                <f:bundle>mvn:org.jboss/jandex/2.0.5.Final-redhat-1</f:bundle>
                <f:bundle>mvn:com.fasterxml/classmate/1.3.4</f:bundle>
                <f:bundle>mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.dom4j/2.1.1_1</f:bundle>
                <f:bundle>mvn:org.hibernate.common/hibernate-commons-annotations/${hibernate.annotations.common.version}</f:bundle>
                <f:bundle>mvn:org.hibernate/hibernate-core/${hibernate.version}</f:bundle>
                <f:bundle>mvn:org.hibernate/hibernate-osgi/${hibernate.version}</f:bundle>
            </feature>
        </replacement>
    </featureReplacements>

</featuresProcessing>
